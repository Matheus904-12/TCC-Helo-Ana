{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üöÄ Iniciar Servidor PHP",
            "type": "shell",
            "command": "php",
            "args": [
                "-S",
                "localhost:8000"
            ],
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*)$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Development Server.*started.*$",
                    "endsPattern": "^.*Listening on.*$"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "‚öôÔ∏è Validar Sintaxe PHP (Todos os arquivos)",
            "type": "shell",
            "command": "Get-ChildItem -Path '*.php' -Recurse | Where-Object { $_.DirectoryName -notmatch '.history' } | ForEach-Object { Write-Host \"Validando: $($_.Name)\" -ForegroundColor Cyan; php -l $_.FullName }",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "group": "test"
        },
        {
            "label": "üîç Validar Sintaxe PHP (Arquivo Atual)",
            "type": "shell",
            "command": "php -l ${file}",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "group": "test"
        },
        {
            "label": "üßπ Limpar Cache do Navegador",
            "type": "shell",
            "command": "Write-Host 'üßπ Dica: Pressione Ctrl+Shift+R no navegador para fazer Hard Reload' -ForegroundColor Yellow",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "üåê Abrir no Navegador (localhost:8000)",
            "type": "shell",
            "command": "Start-Process",
            "args": [
                "http://localhost:8000"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            }
        },
        {
            "label": "üõë Parar Servidor PHP",
            "type": "shell",
            "command": "Stop-Process -Name php -Force",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "üìä Mostrar Info do Projeto",
            "type": "shell",
            "command": "Write-Host 'üìä PositiveSense - Info do Projeto' -ForegroundColor Cyan; Write-Host '================================' -ForegroundColor Cyan; Write-Host 'üìÅ P√°ginas PHP:' -ForegroundColor Green; (Get-ChildItem -Path '*.php' -Exclude 'partials.php' | Measure-Object).Count; Write-Host 'üé® Arquivos CSS:' -ForegroundColor Green; (Get-ChildItem -Path 'css/*.css' | Measure-Object).Count; Write-Host '‚ö° Arquivos JS:' -ForegroundColor Green; (Get-ChildItem -Path 'js/*.js' | Measure-Object).Count; Write-Host 'üñºÔ∏è Imagens:' -ForegroundColor Green; (Get-ChildItem -Path 'img/*' | Measure-Object).Count; Write-Host '================================' -ForegroundColor Cyan",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "üöÄ Build & Run (Iniciar Tudo)",
            "dependsOn": [
                "üöÄ Iniciar Servidor PHP",
                "üåê Abrir no Navegador (localhost:8000)"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
